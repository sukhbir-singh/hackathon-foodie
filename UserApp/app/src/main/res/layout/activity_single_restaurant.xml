<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_single_restaurant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackathon.csec.foodie.SingleRestaurant">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/rest_image"
        android:background="#dad"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:background="#1da"
        app:tabIndicatorColor="@color/cardview_light_background"
        android:layout_below="@+id/rest_image"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
